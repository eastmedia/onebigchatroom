
<div id="messages"></div>

<%= hidden_box_for("stephen", "ross", "eastmedia", "pants", "jeff").html_safe %>

<% content_for :sidebar do %>
  <div class="sidebar">
    <p><strong>Rules of the game</strong><p>
    <p>The rules are: there are no rules! Just remember, whatever you do effects everyone else. So do it all!</p>
    <p class="credits">Created by <a href="http://github.com/nodanaonlyzuul">nodanaonlyzuul</a> and <a href="http://github.com/pnts">pnts</a> during the <a href="http://eastmedia.com">Eastmedia</a> hackathon.</p>
  </div>
<% end %>


<% content_for :message_input do %>
<div class="create">
  <div class="application">
    <%= form_for :message, :id => "new_message_form", :remote => true, :html => {:class => "chat"} do |f| %>
      <%= f.text_area :body %><b></b> <%= f.submit "Say it!" %>
    <% end %>
    <span class="rest-in-place" data-url="/handles/pft" data-object="handle" data-attribute="body">
      <%= session[:handle] %>
    </span>
  </div>
</div>
<% end %>

<script type="text/javascript" charset="utf-8">
  $(function(){
    var faye = new Faye.Client("http://<%= faye_host %>/faye");
    faye.subscribe("/messages/new", function(data){ eval(data); });
    faye.subscribe("/messages/destroy", function(data){ eval(data); });

    var mySound = new buzz.sound("/sounds/intro", {
        formats: [ "ogg", "mp3"]
    });

    mySound.play();

    $("#message_body").keyup(function(e){
      if (e.keyCode === 13 && $("#message_body").val().trim() != "") {
         $("form.chat").submit();
       }
    });

  })
</script>