
<div id="messages"></div>

<span class="rest-in-place" data-url="/handles/pft" data-object="handle" data-attribute="body">
  <%= session[:handle] %>
</span>

<%= form_for :message, :id => "new_message_form", :remote => true do |f| %>
  <%= f.text_field :body %> <%= f.submit "send" %>
<% end %>

<div id="stephen" style="position:absolute;display:none;top:50%;left:35%">
  <%= image_tag "stephen.jpg", :id => "stephen" %>
</div>


<script type="text/javascript" charset="utf-8">
  $(function(){
    var faye = new Faye.Client("http://<%= faye_host %>:9292/faye");
    faye.subscribe("/messages/new", function(data){ eval(data); });
    faye.subscribe("/messages/destroy", function(data){ eval(data); });

    var mySound = new buzz.sound("/sounds/intro", {
        formats: [ "ogg", "mp3"]
    });

    mySound.play();
  })
</script>